@model GenshinCalculator.Models.ViewModels.CharacterCreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Character</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Fullname" class="control-label"></label>
                <input asp-for="Fullname" class="form-control" />
                <span asp-validation-for="Fullname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AvatarPath" class="control-label"></label>
                <input asp-for="AvatarPath" class="form-control" />
                <span asp-validation-for="AvatarPath" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rarity" class="control-label"></label>
                <select asp-for="Rarity" class="form-control">
                    @for (int value = 1; value <= 5; value++)
                    {
                        <option value="@value">@value</option>
                    }
                </select>
                <span asp-validation-for="Rarity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DayOfBirth" class="control-label"></label>
                <input asp-for="DayOfBirth" class="form-control" />
                <span asp-validation-for="DayOfBirth" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Vision" class="control-label"></label>
                <select asp-for="Vision" asp-items="Html.GetEnumSelectList<Vision>()" class="form-control"></select>
                <span asp-validation-for="Vision" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="WeaponType" class="control-label"></label>
                <select asp-for="WeaponType" asp-items="Html.GetEnumSelectList<WeaponType>()" class="form-control"></select>
                <span asp-validation-for="WeaponType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
