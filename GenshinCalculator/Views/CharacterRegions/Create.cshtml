@model GenshinCalculator.Models.ViewModels.CharacterRegionCreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Добавить регион</h1>

<h4>Регион @ViewBag.Character.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-characterId="@ViewBag.Character.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="RegionId" class="control-label">Регион</label>
                <select asp-for="RegionId" class ="form-control" asp-items="ViewBag.RegionId"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" asp-route-characterId="@ViewBag.Character.Id" class="btn btn-secondary">Вернуться</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
